<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">


    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="@color/colorPrimaryDark">

        <AbsoluteLayout
            android:layout_width="411dp"
            android:layout_height="222dp"
            android:layout_x="0dp"
            android:layout_y="97dp"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:layout_x="0dp"
                android:layout_y="16dp"

                android:gravity="center"
                android:text="@string/second_question"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                />
        </AbsoluteLayout>

    </AbsoluteLayout>

    <Button
        android:id="@+id/sep8"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="404dp"
        android:background="@drawable/option_border"
        android:stateListAnimator="@null"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:text="A.Sep 8" />
    <Button
        android:id="@+id/nov8"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_x="220dp"
        android:layout_y="404dp"
        android:background="@drawable/option_border"
        android:stateListAnimator="@null"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:text="B.Nov 8" />

    <Button
        android:id="@+id/jan8"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="485dp"
        android:background="@drawable/option_border"
        android:stateListAnimator="@null"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:text="C.January 8" />


    <Button
        android:id="@+id/march8"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_x="220dp"
        android:layout_y="485dp"
        android:background="@drawable/option_border"
        android:stateListAnimator="@null"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:text="D.March 8" />





</AbsoluteLayout>