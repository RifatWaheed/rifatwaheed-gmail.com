<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">


    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="@color/colorPrimaryDark">

        <AbsoluteLayout
            android:layout_width="411dp"
            android:layout_height="222dp"
            android:layout_x="0dp"
            android:layout_y="97dp"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:layout_x="0dp"
                android:layout_y="16dp"

                android:gravity="center"
                android:text="@string/third_question"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                />
        </AbsoluteLayout>

    </AbsoluteLayout>

    <Button
        android:id="@+id/birthChrist"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_x="12dp"
        android:layout_y="404dp"
        android:background="@drawable/option_border"
        android:stateListAnimator="@null"
        android:text="(A)  Birth if Crist"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/birthPeter"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_x="218dp"
        android:layout_y="404dp"
        android:background="@drawable/option_border"
        android:stateListAnimator="@null"
        android:text="(B)  Birth of ST.Peter"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/Crux"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_x="11dp"
        android:layout_y="483dp"
        android:background="@drawable/option_border"
        android:stateListAnimator="@null"
        android:text="(C) Crusicification of Crist"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/wrongAns"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_x="219dp"
        android:layout_y="482dp"
        android:background="@drawable/option_border"
        android:stateListAnimator="@null"
        android:text="(D)  Rebirth of Christ"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textStyle="bold" />


</AbsoluteLayout>